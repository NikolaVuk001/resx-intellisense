{
  "name": "inteli-resx",
  "displayName": "Inteli-Resx",
  "description": "an resx intelisense for C# and Blazor",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:csharp",
    "onLanguage:razor",
    "onLanguage:aspnetcorerazor"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "inteli-resx.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": " ResX IntelliSense",
      "properties": {
        "resxIntellisense.defaultFile": {
          "type": "string",
          "default": "SharedResources.resx",
          "description": "The default .resx file name to target (e.g. Resources.resx)."
        },
        "resxIntellisense.primaryLanguage": {
          "type": "string",
          "default": "sr-Latn-RS",
          "description": "The ISO code (e.g. 'en', 'fr') of the language to show first in the Add Key form."
        },
        "resxIntellisense.excludedLanguages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of language codes to hide from the Add/Edit form (e.g. ['sqAL', 'de'])."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "fast-xml-parser": "^5.3.2"
  }
}
